@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <AuthorizeView>
            <Authorized>
                <div class="top-row px-4">
                    <a href="http://blazor.net" target="_blank" class="ml-md-auto">About</a>
                    <NavLink class="ml-md-auto" href="auth/logout">
                        Logout (@context.User.Identity.Name)
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="top-row px-4">
                    <NavLink class="ml-md-auto" href="auth/login">
                        Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>
